<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <view
        android:id="@+id/square1"
        class="com.comp1601.tictactoev2.TicTacToeButton"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/square4"
        app:layout_constraintStart_toStartOf="parent" />

    <view
        android:id="@+id/square2"
        class="com.comp1601.tictactoev2.TicTacToeButton"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/square5"
        app:layout_constraintStart_toEndOf="@+id/square1" />


    <view
        android:id="@+id/square3"
        class="com.comp1601.tictactoev2.TicTacToeButton"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/square6"
        app:layout_constraintStart_toEndOf="@+id/square2" />

    <view
        android:id="@+id/square4"
        class="com.comp1601.tictactoev2.TicTacToeButton"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/square7"
        app:layout_constraintStart_toStartOf="parent" />


    <view
        android:id="@+id/square5"
        class="com.comp1601.tictactoev2.TicTacToeButton"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/square8"
        app:layout_constraintStart_toEndOf="@+id/square4" />


    <view
        android:id="@+id/square6"
        class="com.comp1601.tictactoev2.TicTacToeButton"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/square9"
        app:layout_constraintStart_toEndOf="@+id/square5" />


    <view
        android:id="@+id/square7"
        class="com.comp1601.tictactoev2.TicTacToeButton"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <view
        android:id="@+id/square8"
        class="com.comp1601.tictactoev2.TicTacToeButton"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/square7" />


    <view
        android:id="@+id/square9"
        class="com.comp1601.tictactoev2.TicTacToeButton"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="92dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/square8" />

    <TextView
        android:id="@+id/txtCompScore"
        android:layout_width="97dp"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="148dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblScore2" />

    <TextView
        android:id="@+id/lblScore1"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="484dp"
        android:layout_marginTop="30dp"
        android:text="@string/player_1_score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblScore2"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="484dp"
        android:layout_marginTop="20dp"
        android:text="@string/computer_score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPlayerScore" />

    <TextView
        android:id="@+id/txtPlayerScore"
        android:layout_width="97dp"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="148dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblScore1" />


</androidx.constraintlayout.widget.ConstraintLayout>